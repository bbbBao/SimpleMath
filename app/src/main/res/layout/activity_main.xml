<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCalculate4"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:text="รท"
        app:layout_constraintEnd_toStartOf="@+id/btnCalculate5"
        app:layout_constraintStart_toEndOf="@+id/btnCalculate3"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/btnCalculate3"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:text="*"
        app:layout_constraintEnd_toStartOf="@+id/btnCalculate4"
        app:layout_constraintStart_toEndOf="@+id/btnCalculate2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="367dp"
        android:layout_marginEnd="11dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/btnCalculate2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalculate5"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="367dp"
        android:layout_marginEnd="24dp"
        android:text="%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCalculate4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalculate2"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="14dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/btnCalculate3"
        app:layout_constraintStart_toEndOf="@+id/btnCalculate"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <EditText
        android:id="@+id/edtOp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/edtOp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edtOp2"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="177dp"
        android:text="ANSWER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculate3" />

</androidx.constraintlayout.widget.ConstraintLayout>